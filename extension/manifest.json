{
  "manifest_version": 3,
  "name": "Micro-Weather",
  "description": "브라우저에서 팝업으로 편하게 날씨를 확인해 보세요!",
  "version": "1.5",
  "icons": {
    "16": "src/images/icon/icon-16.png",
    "32": "src/images/icon/icon-32.png",
    "48": "src/images/icon/icon-48.png",
    "128": "src/images/icon/icon-128.png"
  },
  "action": {
    "default_title": "Micro-Weather",
    "default_popup": "src/index.html"
  },
  "author": "tombeom@naver.com",
  "permissions": ["geolocation"]
}
